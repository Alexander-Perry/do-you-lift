<div class="row">
    <div class="col-auto">
        <h2> Welcome, {{user_name}}!</h2>
    </div>
</div>

<div class="col-md-2">
    {{#if workouts.length}}
    <h2>All workouts</h2>
    {{#each workouts as |workout|}}
    <div class="workouts">
        <h3>{{workout.name}}</h3>
        <p>{{workout.reps}}</p>
    {{else}}
    <p>No more workouts available</p>
    {{/each}}
    <button type="submit" class="btn btn-primary" id="edit">Add</button>
    <button type="submit" class="btn btn-secondary" id="update">Increase Intensity</button>
</div>

<script src="../public/js/workout.js"></script>