<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{user_name}}!</h2>
  </div>
</div>

<div class="row mt-4">
<div class="col-md-8">
  {{#if users_workouts.length}}
  <div class="col-md-6 workout-list">
    <h3>Your Workouts</h3>

    {{#each workout as |workout|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/workout/{{workout.id}}">{{workout.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{workout.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{else}}
  <div class="col-md-6 workout-list">
    <h3>You have not completed any workouts yet! Go to the workouts tab to log some</h3>
 </div>
  {{/if}}
  </div>

  <div class="col-md-4">
    <h3>Tell us about yourself!</h3>

    <form class="form">
      <div class="form-group">
        <label for="user-height">Height in cm</label>
        <input class="form-input" type="text" id="user-height" name="user-height" />
      </div>
      <div class="form-group">
        <label for="user-weight">Weight in kg</label>
        <input class="form-input" type="number" id="user-weight" name="user-weight" />
      </div>
      <div class="form-group">
      <select id="user-gender" class="form-select body-type" aria-label="body-type">
        <option selected>Body Type</option>
        <option value="M" id="male">masculine</option>
        <option value="F" id="female">feminine</option>
    </select>
        </div>
        <div class="form-group">
        <label for="user-age">Age</label>
        <textarea class="form-input" id="user-age" name="user-age"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary user-info">Update</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/userprofile.js"></script>
